{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "**/*.stories.*",
    "src/main.tsx",
    "src/App.tsx"
  ]
}
